{% extends "../layout.twig" %}
{% block title %}Amigos{% endblock %} {% block main_container %}
    <h2 id="friends">Amigos</h2>
    <div class="table-responsive">
        <form method="post" action="/users">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th class="col-md-1"></th>
                </tr>
                </thead>
                <tbody> {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td><a href="/users/friends/publications/{{ user._id }}">{{ user.name }}</a></td>
                        <td>{{ user.surname }}</td>
                    </tr>
                {% endfor %} </tbody>
            </table>
        </form>
    </div>
    </div>
    <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/users/friends/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}