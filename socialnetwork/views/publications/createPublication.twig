{% extends "../layout.twig" %}

{% block title %}Crear publicación{% endblock %}

{% block main_container %}
    <h2>Crear una nueva publicación</h2>
    <form class="form-horizontal" method="post" action="/users/create/publication" >
        <div class="form-group">
            <label class="control-label col-sm-2" for="titulo">Título:</label>
            <div class="col-sm-10">
                <input id="titulo" type="titulo" class="form-control" name="titulo"
                       placeholder="Título" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="texto">Texto:</label>
            <div class="col-sm-10">
                <input id="texto" type="texto" class="form-control" name="texto"
                       placeholder="Texto" required="true" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Aceptar</button>
            </div>
        </div>
    </form>
{% endblock %}