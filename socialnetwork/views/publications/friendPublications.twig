{% extends "../layout.twig" %}
{% block title %}Publicaciones de un amigo{% endblock %} {% block main_container %}
    <h2>Publicaciones de un amigo</h2>
    <div class="table-responsive">
        <form method="post" action="/users">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Título</th>
                    <th>Texto</th>
                    <th class="col-md-1"></th>
                </tr>
                </thead>
                <tbody> {% for publication in publications %}
                    <tr>
                        <td>{{ publication.fecha }}</td>
                        <td>{{ publication.titulo }}</td>
                        <td>{{ publication.texto }}</td>
                    </tr>
                {% endfor %} </tbody>
            </table>
        </form>
    </div>
    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/users/friends/publications/{{ userid }}/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}