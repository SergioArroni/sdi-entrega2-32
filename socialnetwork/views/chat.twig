{% extends "layout.twig" %}
{% block title %} Mis publicaciones {% endblock %}

{% block main_container %}

    <div class="row" style="margin-top: 20px;" >
        {% for comment in comments %}
            <div class="media-body">
                <p>{{comment.text}}</p>
                <p>{{comment.author}}</p>
            </div>
        {% endfor %}
    </div>

    <div class="container">
        <h2>Agregar comentario</h2>
        <form class="form-horizontal" method="post" action="/comments/{{ song._id }}"  enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label col-sm-2" for="texto">Texto:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="texto" name="texto" placeholder="Contenido del comentario" required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
